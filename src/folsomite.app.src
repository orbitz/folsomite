%%-*- mode: erlang -*-
{application, folsomite,
 [
  {description, "blow up your graphite / riemann server with folsom metrics"},
  {vsn, git},
  {registered, [ folsomite_sup
               , folsomite_server
               ]},
  {applications, [ kernel
                 , stdlib
                 , folsom
                 ]},
  {mod, {folsomite_app, no_arg}},
  {env, [ {flush_seconds, 5}
        , {backend_restart_seconds, 30}
        , {backends, []}
        ]}
 ]}.
